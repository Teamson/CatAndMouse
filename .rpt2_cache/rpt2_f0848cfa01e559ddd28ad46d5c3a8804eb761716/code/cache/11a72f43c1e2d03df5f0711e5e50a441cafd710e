  "code": "import GameLogicCrl from \"./GameLogicCrl\";\r\nimport Utility from \"../Mod/Utility\";\r\nimport PosCrl from \"./PosCrl\";\r\nexport default class Mouse extends Laya.Script3D {\r\n    constructor() {\r\n        super();\r\n        this.myOwner = null;\r\n        this._body = null;\r\n        this.targetNode = null;\r\n        this.pointTarget = null;\r\n        this.isToPos = true;\r\n        this.curId = 1;\r\n        this.speed = 2;\r\n    }\r\n    onAwake() {\r\n        this.myOwner = this.owner;\r\n        this._body = this.myOwner.getComponent(Laya.Rigidbody3D);\r\n    }\r\n    onUpdate() {\r\n        let arr = [];\r\n        for (let i = 0; i < GameLogicCrl.Share.currentPosNode.numChildren; i++) {\r\n            let p = GameLogicCrl.Share.currentPosNode.getChildAt(i);\r\n            let pCrl = p.getComponent(PosCrl);\r\n            if (!pCrl.getIsBaned()) {\r\n                arr.push(p);\r\n            }\r\n        }\r\n        arr = arr.filter((a) => { return parseInt(a.name.substr(0, 1)) == this.curId; });\r\n        if (arr.length > 0) {\r\n            arr.sort((a, b) => {\r\n                return Laya.Vector3.distance(b.transform.position.clone(), this.myOwner.transform.position.clone()) -\r\n                    Laya.Vector3.distance(a.transform.position.clone(), this.myOwner.transform.position.clone());\r\n            });\r\n            this.targetNode = arr[0];\r\n            let nextId = parseInt(this.targetNode.name.substr(0, 1));\r\n            this.pointTarget = GameLogicCrl.Share.currentPointsNode.getChildAt(nextId);\r\n        }\r\n        else {\r\n            this.targetNode = null;\r\n        }\r\n    }\r\n    onLateUpdate() {\r\n        let dir = new Laya.Vector3(0, 0, 0);\r\n        let dis = 0;\r\n        if (this.isToPos) {\r\n            if (this.targetNode == null) {\r\n                this._body.linearVelocity = new Laya.Vector3(0, 0, 0);\r\n                return;\r\n            }\r\n            dir = Utility.getDirectionAToB(this.myOwner, this.targetNode);\r\n            dis = Laya.Vector3.distance(this.myOwner.transform.position.clone(), this.targetNode.transform.position.clone());\r\n        }\r\n        else {\r\n            if (this.pointTarget == null) {\r\n                this._body.linearVelocity = new Laya.Vector3(0, 0, 0);\r\n                return;\r\n            }\r\n            dir = Utility.getDirectionAToB(this.myOwner, this.pointTarget);\r\n            dis = Laya.Vector3.distance(this.myOwner.transform.position.clone(), this.pointTarget.transform.position.clone());\r\n        }\r\n        dir = new Laya.Vector3(dir.x * this.speed, dir.y * this.speed, dir.z * this.speed);\r\n        this._body.linearVelocity = new Laya.Vector3(dir.x * this.speed, dir.y * this.speed, dir.z * this.speed);\r\n        if (this.isToPos && dis <= 0.1) {\r\n            this.isToPos = false;\r\n        }\r\n        else if (!this.isToPos && dis <= 0.1) {\r\n            this._body.linearVelocity = new Laya.Vector3(0, 0, 0);\r\n            this.isToPos = false;\r\n        }\r\n    }\r\n    onCollisionEnter(collision) {\r\n    }\r\n    onCollisionStay(collision) {\r\n    }\r\n    onCollisionExit(collision) {\r\n    }\r\n}\r\n",
